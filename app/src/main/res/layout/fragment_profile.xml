<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/profileBackgroundImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_background" />

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/profile_picture"
        android:elevation="6dp" />

    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Melissa"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/usernameTextView"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/btnEditData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Изменить данные"
            android:drawableStart="@drawable/ic_edit" />

        <Button
            android:id="@+id/btnFavoriteRecipes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Избранные рецепты"
            android:drawableStart="@drawable/ic_favorite" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Выйти из аккаунта"
            android:drawableStart="@drawable/ic_logout" />
    </LinearLayout>

    <!-- The BottomNavigationView goes here or is included from another layout file -->
</RelativeLayout>
